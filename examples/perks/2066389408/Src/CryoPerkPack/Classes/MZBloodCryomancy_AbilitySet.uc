static function bool Chilblains_AlternateFriendlyName(out string AlternateDescription, XComGameState_Ability AbilityState, StateObjectReference TargetRef)
{
	local XComGameState_Unit			TargetState;

	if( TargetRef.ObjectID > 0 )
	{
		TargetState = XComGameState_Unit(`XCOMHISTORY.GetGameStateForObjectID(TargetRef.ObjectID));
	
		if (TargetState != none)
		{
			if ( TargetState.IsFrozen() )
			{
				AlternateDescription = default.ChilblainsFreezeName;
				return true;
			}
			else if ( TargetState.IsUnitAffectedByEffectName('MZBitterChill') )
			{
				AlternateDescription = default.ChilblainsBChillName;
				return true;
			}
			else if ( TargetState.IsUnitAffectedByEffectName('MZChill') || TargetState.IsUnitAffectedByEffectName('Chilled'))
			{
				AlternateDescription = default.ChilblainsChillName;
				return true;
			}
		}
	}

	return false;
}

