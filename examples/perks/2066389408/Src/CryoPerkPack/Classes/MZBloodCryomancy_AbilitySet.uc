static function array<X2DataTemplate> CreateTemplates()
{
	local array<X2DataTemplate> Templates;

	Templates.AddItem(Chilblains());
	Templates.AddItem(HeatDrain());
	Templates.AddItem(BloodChill());
	Templates.AddItem(FrozenAbyss());
	/*>>>*/Templates.AddItem(FrozenAbyssStage2());
	Templates.AddItem(VeinFreeze());


	return Templates;
}


